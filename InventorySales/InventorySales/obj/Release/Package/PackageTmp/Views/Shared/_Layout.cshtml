<!DOCTYPE html>
<html>
<head>
     <meta charset="utf-8" />
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0" />
     <title>@ViewBag.Title</title>
     <script src="~/Scripts/jquery-1.9.1.js"></script>
     <link href="~/Content/bootstrap.css" rel="stylesheet" />
     <script src="~/Scripts/bootstrap.js"></script>
     <script src="~/Scripts/jquery.validate.min.js"></script>
     <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
     <script src="~/Scripts/InventorySalesScripts.js"></script>
     <script src="~/Scripts/Category.js"></script>
     <script src="~/Scripts/Inventory.js"></script>
     <script src="~/Scripts/Product.js"></script>
     <script src="~/Scripts/Unit.js"></script>
     <script src="~/Scripts/Lists.js"></script>
     <link href="~/Styles/InventorySalesStyles.css" rel="stylesheet" />

</head>
<body>
     <div id="navigation">
          <nav class="navbar navbar-primary">
               <div class="container-fluid">
                    <div class="navbar-header">
                         <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#menuList">
                              <span class="zoom-in  glyphicon glyphicon-align-justify"></span>
                         </button>
                         <a class="navbar-brand" href="home/index">In-Check</a>
                        
                    </div>
                    <div id="menuList" class="collapse navbar-collapse">
                         <ul class="nav navbar-nav">
                              <li class="active"><a href="/home/index">Home</a></li>
                              <li class="dropdown">
                                   <a class="dropdown-toggle" data-toggle="dropdown" href="#">Inventory<span class="caret"></span></a>
                                   <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Add", "Add", "Inventory")</li>
                                        <li>@Html.ActionLink("View", "Display", "Inventory")</li>
                                   </ul>
                              </li>
                              <li class="dropdown">
                                   <a class="dropdown-toggle" data-toggle="dropdown" href="#">Product<span class="caret"></span></a>
                                   <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Add", "Add", "Product")</li>
                                        <li>@Html.ActionLink("View", "Display", "Product")</li>
                                   </ul>
                              </li>
                              <li class="dropdown">
                                   <a class="dropdown-toggle" data-toggle="dropdown" href="#">Category<span class="caret"></span></a>
                                   <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Add", "Add", "Category")</li>
                                        <li>@Html.ActionLink("View", "Display", "Category")</li>
                                   </ul>
                              </li>
                              <li class="dropdown">
                                   <a class="dropdown-toggle" data-toggle="dropdown" href="#">Brands<span class="caret"></span></a>
                                   <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Add", "Add", "ProductBrand")</li>
                                        <li>@Html.ActionLink("View", "Display", "ProductBrand")</li>
                                   </ul>
                              </li>
                         </ul>
                         @Html.Partial("_LoginPartial")
                    </div>
               </div>
          </nav>
     </div>
     <div class="page-heading">
          <h1>@ViewBag.Heading</h1>
     </div>
     <div class="container-fluid body-content">
          <section class="well col-lg-8 col-lg-push-2">
               @RenderBody()
          </section>
          <aside class="col-lg-2 col-lg-pull-8">
              @RenderSection("Right", required: false)
          </aside>
          <aside class="col-lg-2">
               @RenderSection("Left", required: false)
          </aside>
          
         
     </div>
     <div class="container-fluid text-center">
          <footer>
               <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
          </footer>
     </div>
     @RenderSection("Scripts", required: false)
</body>
</html>
