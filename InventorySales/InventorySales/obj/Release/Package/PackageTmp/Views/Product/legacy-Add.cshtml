@model InventorySales.Models.Product

@{
     ViewBag.Title = "Add";
}

@using (Html.BeginForm("Add","Product"))
{
     @Html.AntiForgeryToken()

     <div>
          @Html.ValidationSummary(true, "", new { @class = "text-danger" })
          <div class="form-group-lg">
               <label class="control-label">Measure</label>
               <div>
                    @Html.Partial("CategoryList")
               </div>
          </div>
          <div class="form-group-lg">
               <label class="control-label">Name</label>
               <div>
                   <input type="text" name="Name" class="form-control" placeholder="eg. pepsi" />
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
               </div>
          </div>
          <div class="form-group-lg">
               <label class="control-label">Measure</label>
               <div>
                    <input type="text" name="Measure" class="form-control" placeholder="eg. 32" />
                    @Html.ValidationMessageFor(model => model.Measure, "", new { @class = "text-danger" })
               </div>
          </div>
          <div class="form-group-lg">
               <label class="control-label">Unit</label>
               <div>
                    @Html.Partial("UnitList")
               </div>
          </div>
          <div class="form-group-lg">
               <a id="toggleModal" href="#modalConfirm" class="hide" data-toggle="modal"></a>
               <button type="button" class="btn" onclick="ConfirmAddProduct()">Add</button>
          </div>
          <div id="modalConfirm" class="modal fade col-xs-12 col-md-8 col-md-offset-2">
               <div class="modal-dialog">
                    <div class="modal-content">
                         <div class="modal-header">
                              <button class="btn-danger close" data-dismiss="modal">X</button>
                              <label id="comfirmHeader">Confirm</label>
                         </div>
                         <div class="modal-body">
                              <p id="confirmMessage">This will add a new product</p>
                         </div>
                         <div class="modal-footer">
                              <button class="btn-danger" data-dismiss="modal">Cancel</button>
                              <button type="submit" class="btn-success">Ok</button>
                         </div>
                    </div>

               </div>
          </div>
     </div>
}

<div>
     @Html.ActionLink("Back to List", "Index")
</div>
