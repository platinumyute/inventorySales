@model InventorySales.ViewModels.CategoryAddEditViewModel

@{
     ViewBag.Title = "Add Category";
     ViewBag.Heading = "Add New Category";
}
<section class="col-lg-8 col-lg-push-2 well">
     @using (Html.BeginForm("Add", "Category"))
     {
         @Html.AntiForgeryToken()
    
         <div>
             @Html.ValidationSummary(true, "", new { @class = "text-danger" })
             <div class="form-group-lg">
                 @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label " })
                 <div>
                     @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                     @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                 </div>
             </div>

              <div class="form-group-lg">
                   <button type="submit" class="btn">Add</button>
              </div>
         </div>
     }
</section>

<div class="col-lg-2 col-lg-pull-8">
     @Html.Action("GetRecentCategoryEntries")
</div>