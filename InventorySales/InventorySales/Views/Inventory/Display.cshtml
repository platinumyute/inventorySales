@model IEnumerable<InventorySales.ViewModels.InventoryDisplayViewModel>

@{
     ViewBag.Title = "View Inventory";
     ViewBag.Heading = "Inventory List";
}
<section>
     @using (Html.BeginForm("SearchProduct", "Inventory", FormMethod.Post))
     {
          <div class="container-search input-group">
               <input id="searchProduct" class="form-control input-lg" type="text" placeholder="search product" value="@ViewBag.SearchProduct" name="q" onkeyup="implementAutoComplete" />
               <span class="input-lg input-group-addon" onclick="submitForm()"><span class="glyphicon glyphicon-search"></span></span>
          </div>
          <div class="shadow-gains zoom-glyphs table-responsive">
               <table id="tblInventoryDisplay" class="table table-extend table-striped table-bordered sortable">
                    <thead>
                         <tr>
                              <th>
                                   <span>@Html.DisplayNameFor(model => model.Category)</span>
                              </th>
                              <th>
                                   <span>@Html.DisplayNameFor(model => model.Brand)</span>
                              </th>
                              <th>
                                   <span>@Html.DisplayNameFor(model => model.Description)</span>
                              </th>
                              <th>
                                   <span>@Html.DisplayNameFor(model => model.Available)</span>
                              </th>
                              <th>
                                   <span>@Html.DisplayNameFor(model => model.Sold)</span>
                              </th>
                              <th>
                                   <span>@Html.DisplayNameFor(model => model.Bought)</span>
                              </th>
                              <th>
                                   <span>@Html.DisplayNameFor(model => model.PricePerUnit)</span>
                              </th>
                              <th>
                                   <span>@Html.DisplayNameFor(model => model.TotalCost)</span>
                              </th>
                              <th><span class="glyphicon glyphicon-cog"></span></th>
                         </tr>
                    </thead>
                    <tbody>
                         @foreach (var item in Model)
                  {
               <tr>
                    <td>
                         @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                         @Html.DisplayFor(modelItem => item.Brand)
                    </td>
                    <td>
                         @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                         @Html.DisplayFor(modelItem => item.Available)
                    </td>
                    <td>
                         @Html.DisplayFor(modelItem => item.Sold)
                    </td>
                    <td>
                         @Html.DisplayFor(modelItem => item.Bought)
                    </td>
                    <td>
                         $@Html.DisplayFor(modelItem => item.PricePerUnit)
                    </td>
                    <td>
                         $@Html.DisplayFor(modelItem => item.TotalCost)
                    </td>
                    <td>
                         <a href="@Url.Action("edit", new { id = item.Id })"><span class="glyphicon glyphicon-edit"></span></a>
                         <a href="@Url.Action("delete", new { id = item.Id })"><span class="glyphicon glyphicon-remove"></span></a>
                    </td>
               </tr>
                  }
                    </tbody>
               </table>
               <div class="text-center">
                    <ul class="pagination">
                         @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                    <li>@Html.ActionLink(i.ToString(), "Display", new { pageRequested = i })</li>
                    }
                    </ul>
               </div>
          </div>
     }
</section>

